{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "removeComments": true,
    "noEmit": false,
    "baseUrl": "./src",
    "paths": {
      "@common/*": ["common/*"],
      "@config/*": ["config/*"],
      "@modules/*": ["modules/*"],
      "@albums/*": ["modules/albums/*"],
      "@auth/*": ["modules/auth/*"],
      "@photos/*": ["modules/photos/*"],
      "@upload/*": ["modules/upload/*"],
      "@users/*": ["modules/users/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist", "test", "**/*spec.ts"]
}
